{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "module": "ESnext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
